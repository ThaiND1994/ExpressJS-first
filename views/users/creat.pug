extends ../layout/common
block content
  h1
   p(class="text-center") Creat Users

  if errors
    each error in errors
      .alert.alert-danger= error 
  form(action='/users/create',method='POST')
   div(class="form-group")
    label(for="exampleInputEmail1" class='m-2') Name:
    input(type='text',name='name',class="form-control",placeholder="Your Name",value=values ? values.name : '')
    label(for="exampleInputPhone1" class='m-2') Phone:
    input(type='text',name='phone',class="form-control",placeholder="Your Phone Number",value=values ? values.phone : '')
    br
    button(class="btn btn-outline-primary ml-4")  Submit