extends ../layout/common
block content
  h1
   p(class="text-center") Log In

  if errors
    each error in errors
      .alert.alert-danger= error 
  form(action='/auth/login',method='POST')
   div(class="form-group")
    label(for="exampleInputEmail1" class='m-2') Email:
    input(type='text',name='email',class="form-control",placeholder="Your Name",value=values ? values.email : '')
    label(for="exampleInputPhone1" class='m-2') Password:
    input(type='password',name='pass',class="form-control",placeholder="Your Phone Number",value=values ? values.pass : '')
    br
    button(class="btn btn-outline-primary ml-4")  Submit